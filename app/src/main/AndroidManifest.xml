<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_reformapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logob"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReformApp">
        <activity
            android:name=".Modo_Usuario.EmpresaSeleccionadaActivity"
            android:exported="false" />
        <activity
            android:name=".Modo_Usuario.EmpresasActivity"
            android:exported="false" />
        <activity
            android:name=".Modo_Empresa.MenuEmpresaActivity"
            android:exported="false" />
        <!-- adjustPan es para que la pantalla se "suba" al escribir (para poder ver lo que estÃ¡s escribiendo) -->
        <activity
            android:name=".Modo_Usuario.AjustesUsuarioActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Modo_Usuario.MenuUsuarioActivity"
            android:exported="false" />
        <activity
            android:name=".ExplicacionPt2Activity"
            android:exported="false" />
        <activity
            android:name=".ExplicacionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registros.RegistroEmpresasActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".Registros.RegistroUsuariosActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
    </application>

</manifest>